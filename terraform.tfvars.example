# =============================================================================
# Example Terraform Variables File for AWS Cost Alert
# =============================================================================
# Copy this file to terraform.tfvars and update with your values
# cp terraform.tfvars.example terraform.tfvars

# Email address for alert notifications
# REQUIRED: Change this to your actual email address
email_address = "your-email@example.com"

# Monthly budget limit in USD
# Example: "8.00" for approximately 1000 yen
budget_amount = "8.00"

# Project name used for resource naming
project_name = "aws-cost-watch"

# Environment name
environment = "personal"

# SNS topic name
sns_topic_name = "cost-alert-topic"

# =============================================================================
# Advanced Configuration (Optional)
# =============================================================================

# Uncomment and modify the following if you need custom settings:

# Different budget amount
# budget_amount = "15.00"  # For ~2000 yen monitoring

# Different project name
# project_name = "my-cost-monitor"

# Different environment
# environment = "prod"